@model Advertisement
@{
    ViewBag.Title = "Delete";
}
<h1>Delete add for community @Model.Community.Title</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Answer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            File Name
        </dt>
        <dd class="col-sm-10">
            @Model.FileName
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Url" style="max-width: 400px;max-height:400px;" />
        </dd>
    </dl>

    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.HiddenFor(m => m.ID)

        <button type="submit" class="btn btn-danger">Delete</button>
    }
    <br />
    @Html.ActionLink("Back to List", "Index", "Advertisements", new { id = Model.Community.ID })
</div>