@model Student

@{
    ViewBag.Title = "Delete Student";
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Enrollment Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.EnrollmentDate)
        </dd>
    </dl>

    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.HiddenFor(n => n.ID)

        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.Raw(" | ")
        @Html.ActionLink("Back to List", "Index");
    }
</div>