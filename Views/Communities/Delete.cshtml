@model Community
@{
    ViewBag.Title = "Delete Community";
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Community</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(n => n.Title)
        </dd>
        <dt class="col-sm-2">
            Budget
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(n => n.Budget)
        </dd>
    </dl>

    @using (Html.BeginForm(FormMethod.Post))
    {
        Html.HiddenFor(m => m.ID);
        if (Model.Advertisements.Count > 0)
        {
            <p>You cannot delete a community untill all associated advertisements are deleted</p>
        }
        else
        {
            <button type="submit" class="btn btn-danger">Delete</button>
        }
    }

    @Html.ActionLink("Back to List", "Index")
</div>